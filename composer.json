{
    "name": "codemonster-ru/env",
    "description": "Lightweight .env loader for PHP projects",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/codemonster-ru/env-php",
    "authors": [
        {
            "name": "Kirill Kolesnikov",
            "email": "admin@codemonster.ru",
            "homepage": "https://github.com/KolesnikovKirill",
            "role": "Lead Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Codemonster\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6 || ^10.5 || ^11.0 || ^12.0"
    },
    "scripts": {
        "test": "phpunit --colors=always --testdox"
    },
    "keywords": [
        "php",
        "env",
        "dotenv",
        "environment",
        "configuration",
        "settings",
        "loader"
    ],
    "support": {
        "issues": "https://github.com/codemonster-ru/env-php/issues",
        "source": "https://github.com/codemonster-ru/env-php"
    }
}
